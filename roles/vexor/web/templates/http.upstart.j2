description "start and stop the vexor http daemon"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

setuid {{ vx_user }}
setgid {{ vx_user }}

script
  home={{ vx_home }}/web/current
  user={{ vx_user }}
  command="{{ vx_home }}/bin/{{ vx_user }}-http"

  trap "kill -USR2 $$" HUP

  chdir $home
  exec $command
end script

