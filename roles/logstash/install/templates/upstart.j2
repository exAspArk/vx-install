description "start and stop the logstash daemon"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

setuid logstash
setgid logstash

script
  home=/opt/logstash-{{ logstash_version }}
  user=logstash
  command="java -jar logstash.jar agent -f config/indexer.conf"

  chdir $home
  exec $command
end script


